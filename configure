#!/usr/bin/env ruby

class Script
  def initialize(path)
    @path = path
  end
  def run
    instance_eval File.read(@path)
  end
  def directory
    File.dirname(@path)
  end
end

def glob_path
  root_path = File.expand_path(File.dirname(__FILE__))
  File.join(root_path, '*/configure.rb')
end

Dir.glob(glob_path).each do |file|
  Script.new(file).run
end
