{
  "tasks": [
    {
      "type": "symlink",
      "source": "~/Library/Application Support/Sublime Text 2/Installed Packages",
      "destination": "Sublime/Installed Packages"
    },
    {
      "type": "symlink",
      "source": "~/Library/Application Support/Sublime Text 2/Packages/User",
      "destination": "Sublime/User Packages"
    },
    {
      "type": "symlink",
      "source": "~/Library/Developer/Xcode/UserData/FontAndColorThemes",
      "destination": "Xcode/Themes"
    },
    {
      "type": "brew",
      "arguments": [ "update" ]
    },
    {
      "type": "brew",
      "arguments": [ "upgrade", "--all" ]
    },
    {
      "type": "brew",
      "arguments": [ "tap", "homebrew/services" ]
    },
    {
      "type": "brew",
      "arguments": [
        "install",
        "rbenv",
        "ruby-build",
        "redis",
        "postgres",
        "heroku",
        "zsh-completions",
        "git",
        "kdiff3",
        "carthage",
        "caskroom/cask/brew-cask"
      ]
    },
    {
      "type": "brew",
      "arguments": [
        "cask",
        "install",
        "gitx",
        "skype",
        "rdio",
        "alfred",
        "minecraft",
        "reveal",
        "hex-fiend",
        "sublime-text",
        "hockeyapp",
        "slate",
        "dropbox",
        "omnidisksweeper",
        "mailbox",
        "adobe-creative-cloud",
        "sonos",
        "steam",
        "vmware-fusion",
        "transmission"
      ]
    },
    {
      "type": "brew",
      "arguments": [ "cask", "cleanup" ]
    },
    {
      "type": "brew",
      "arguments": [ "cleanup" ]
    }
  ]
}
