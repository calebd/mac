{
  "tasks": [
    {
      "type": "symlink",
      "source": "~/Library/Application Support/Sublime Text 2/Installed Packages",
      "destination": "Sublime/Installed Packages"
    },
    {
      "type": "symlink",
      "source": "~/Library/Application Support/Sublime Text 2/Packages/User",
      "destination": "Sublime/User Packages"
    },
    {
      "type": "symlink",
      "source": "~/Library/Developer/Xcode/UserData/FontAndColorThemes",
      "destination": "Xcode/Themes"
    },
    {
      "type": "brew",
      "arguments": [ "update" ]
    },
    {
      "type": "brew",
      "arguments": [ "upgrade", "--all" ]
    },
    {
      "type": "brewinstall",
      "packages": [
        "rbenv",
        "ruby-build",
        "redis",
        "postgres",
        "heroku",
        "zsh-completions",
        "git",
        "kdiff3",
        "carthage"
      ]
    }
  ]
}
