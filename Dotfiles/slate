# Maximize window
bind up:ctrl,alt,cmd move screenOriginX+10;screenOriginY+10 screenSizeX-20;screenSizeY-20

# Throw left
bind left:ctrl,alt,cmd move screenOriginX+10;screenOriginY+10 screenSizeX/2-11;screenSizeY-20

# Throw right
bind right:ctrl,alt,cmd move screenSizeX/2+1;screenOriginY+10 screenSizeX/2-11;screenSizeY-20

# Make window small
bind down:ctrl,alt,cmd move windowTopLeftX;windowTopLeftY 900;700
